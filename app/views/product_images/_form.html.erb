<%= form_for(@product_image, :html => { :class => 'well form-inline', :multipart => true }) do |f| %>
  <%#= render :partial => 'partials/error_messages', :locals => { :obj => @product } %>
  <%= f.hidden_field :product_id %>
  <%= f.label 'Tambah Gambar', :class => 'control-label' %>
  <%= f.file_field :image, :class => 'input-file', :placeholder => "Tambah Gambar" %>

  <%= f.submit 'Simpan', :class => 'btn btn-primary' %>
<% end %>