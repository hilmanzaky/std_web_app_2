<%= form_for(@header_link, :html => { :class => 'form-horizontal' }) do |f| %>
  <fieldset>
    <legend><%= action %> Header</legend>

    <div class="control-group">
      <%= f.label 'Nama Header', :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :name, :class => 'textfield' %>
      </div>
    </div>
    <div class="form-actions">
      <%= f.submit 'Simpan', :class => 'btn btn-primary' %>
    </div>
  </fieldset>
<% end %>
